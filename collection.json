{
	"info": {
		"name": "Full Inventory Lab 6 (10 endpoints)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get All Inventory",
			"request": {
				"method": "GET",
				"header": [],
				"url": "http://localhost:3000/inventory"
			}
		},
		{
			"name": "2. Register Item (Upload)",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{ "key": "inventory_name", "value": "Test Item", "type": "text" },
						{ "key": "description", "value": "Test description", "type": "text" },
						{ "key": "photo", "type": "file", "src": [] }
					]
				},
				"url": "http://localhost:3000/register"
			}
		},
		{
			"name": "3. Search Item (API)",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{ "key": "id", "value": "ВСТАВ_ID_СЮДИ", "type": "text" },
						{ "key": "has_photo", "value": "on", "type": "text" }
					]
				},
				"url": "http://localhost:3000/search"
			}
		},
		{
			"name": "4. Get Item by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ"
			}
		},
		{
			"name": "5. Update Item Info (PUT)",
			"request": {
				"method": "PUT",
				"header": [
					{ "key": "Content-Type", "value": "application/json", "type": "text" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Updated Name\",\n    \"description\": \"Updated Description\"\n}"
				},
				"url": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ"
			}
		},
		{
			"name": "6. Get Item Photo",
			"request": {
				"method": "GET",
				"header": [],
				"url": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ/photo"
			}
		},
		{
			"name": "7. Update Item Photo (PUT)",
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{ "key": "photo", "type": "file", "src": [] }
					]
				},
				"url": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ/photo"
			}
		},
		{
			"name": "8. Delete Item",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ"
			}
		},
		{
			"name": "9. Get Register Page (HTML)",
			"request": {
				"method": "GET",
				"header": [],
				"url": "http://localhost:3000/RegisterForm.html"
			}
		},
		{
			"name": "10. Get Search Page (HTML)",
			"request": {
				"method": "GET",
				"header": [],
				"url": "http://localhost:3000/SearchForm.html"
			}
		}
	]
}