{
	"info": {
		"name": "Lab 6 Inventory Service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get All Inventory",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/inventory",
					"protocol": "http",
					"host": ["localhost"],
					"port": "3000",
					"path": ["inventory"]
				}
			}
		},
		{
			"name": "2. Register Item (Upload)",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{ "key": "inventory_name", "value": "Test Item", "type": "text" },
						{ "key": "description", "value": "Test description", "type": "text" },
						{ "key": "photo", "type": "file", "src": [] }
					]
				},
				"url": {
					"raw": "http://localhost:3000/register",
					"protocol": "http",
					"host": ["localhost"],
					"port": "3000",
					"path": ["register"]
				}
			}
		},
		{
			"name": "3. Search Item",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{ "key": "id", "value": "ВСТАВ_ID_СЮДИ", "type": "text" },
						{ "key": "has_photo", "value": "on", "type": "text" }
					]
				},
				"url": {
					"raw": "http://localhost:3000/search",
					"protocol": "http",
					"host": ["localhost"],
					"port": "3000",
					"path": ["search"]
				}
			}
		},
		{
			"name": "4. Get Item by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ",
					"protocol": "http",
					"host": ["localhost"],
					"port": "3000",
					"path": ["inventory", "ВСТАВ_ID_СЮДИ"]
				}
			}
		},
		{
			"name": "5. Delete Item",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/inventory/ВСТАВ_ID_СЮДИ",
					"protocol": "http",
					"host": ["localhost"],
					"port": "3000",
					"path": ["inventory", "ВСТАВ_ID_СЮДИ"]
				}
			}
		}
	]
}